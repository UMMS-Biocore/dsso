extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Log into your account
      form.form.form--login(action='/login', method='post')
        .form__group
          label.form__label(for='email') Email address or Username
          input#username.form__input(name='username', placeholder='', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(name='password', type='password', placeholder='', required, minlength='6')
        .form__group.right
          button.btn-small.btn--green Login
        .form__group.text-center.form__label Don't have an account  
          button.btn-small#signup Sign Up